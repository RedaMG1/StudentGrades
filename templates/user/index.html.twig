{% extends 'base.html.twig' %}

{% block title %}Users
{% endblock %}

{% block body %}

	<div class="col-lg-12  contenu-blanc shadow-lg">

		<h1>Users</h1>
		<table class="table table-striped table-advance table-hover">
			<thead>
				<tr class="bg-entete">
					<th class="col-md-1">Id</th>

					<th class="col-md-1">Username</th>
					<th class="col-md-1">Email</th>
					<th class="col-md-1">Roles</th>
					<th class="col-md-1">Created At</th>
					<th class="col-md-1">Updated At</th>

					<th class="col-md-6">Actions<span class="pull-right">
							<a href="{{ path('create_user')}}" class="btn btn-primary btn-sm">
								<i class="fa fa-save"></i>
								Add a new User</a>
						</span>
					</th>

				</tr>
				{% if button is defined %}
					<button type="submit" class="btn btn-primary">
						{{ button }}
					</button>
				{% endif %}
				<div class="container-fluid contenu">
					{% if not users.items is same as ([]) %}
						{#in case theres no data yet#}
						There is
						{{ users.getTotalItemCount }}
						user!!

						
					</thead>
					<br>
					{% for flash_message in app.flashes('success') %}
							<div class="alert alert-success">
								{{ flash_message }}
							</div>
						{% endfor %}
					<tbody>

						{% for key, user in users %}
							<tr>
								<td>{{ user.id }}</td>
								<td>{{ user.username }}</td>
								<td>{{ user.email }}</td>

								<td>
									{% for role in user.roles %}
										{{ role }}
									{% endfor %}
								</td>

								<td>{{ user.createdAt }}</td>
								<td>{{ user.updatedAt}}</td>


								<td
									class="row">

									<!-- formulaire pour demander la modification ou la suppression -->
									<form>

										<button type="submit" class="btn btn-primary btn-sm" formaction="{{ path('edit_user',{id : user.id}) }}" title="Edit">
											<i title="Edit">
												<i class="fa fa-pencil"></i>
												Edit</button>


											<button type="submit" class="btn btn-danger btn-sm" formaction="{{ path('delete_user',{id : user.id}) }}" title="Supprimer" onclick="return confirm('Do you really want to delete this user ?');">
												<i class="fa fa-trash-o "></i>
												delete</button>

											<input
											type="hidden" name="_token" value="{{ csrf_token('action-item' ~ user.id) }}">
										{#  ~     pour concat√©ner des chaines en twig #}
										</form>
									</td>
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
				<div class="d-flex justify-content-center">
					{{ knp_pagination_render(users) }}
				</div>
			{% else %}
				there is no users yet
			{% endif %}
		</div>
	</div>
{% endblock %}
