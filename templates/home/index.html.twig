{% block body %}

<!-- Statistics Section -->
<section id="statistics" class="py-5">
	<div class="container">
		<h2 class="text-center mb-4 home-title">Website Statistics</h2>
		<div class="row">
			<div class="col-md-4">
				<div class="home-card1 text-center hover">
